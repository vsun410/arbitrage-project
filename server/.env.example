# Vultr 김프 아비트라지 서버 환경 설정

# 서버 설정
PORT=8080
NODE_ENV=production

# 모니터링 심볼 (쉼표로 구분)
SYMBOLS=BTC,ETH,XRP

# 데이터 수집 간격 (밀리초)
DATA_INTERVAL=15000
RATE_INTERVAL=300000

# 메모리 최적화 설정
MAX_DATA_POINTS=50
MAX_LOG_LINES=1000

# API 호출 설정
MAX_RETRIES=3
REQUEST_TIMEOUT=5000

# 로깅 레벨
LOG_LEVEL=INFO

# 시스템 모니터링
ENABLE_HEALTH_CHECK=true
ENABLE_STATS_API=true

# 보안 설정 (선택사항)
# API_KEY=your_api_key_here
# ALLOWED_IPS=127.0.0.1,192.168.1.0/24

# 알림 설정 (선택사항)
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...